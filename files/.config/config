bindsym $mod+t exec $i3dir/init_workspace $todos_workspace emacs
bindsym $mod+b exec $i3dir/init_workspace $browser_workspace $BROWSER
bindsym $mod+m exec $i3dir/init_workspace $messenger_workspace telegram-desktop
