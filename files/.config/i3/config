# Here are the packages used in this i3 setup:
# * interface:
# ranger xcwd-git rofi i3lock-fancy-git feh compton-git polybar perl-anyevent-i3 ttf-font-awesome
# * utilities:
# xorg-xev xorg-xmodmap unclutter-xfixes-git xorg-xrdb xorg-xinit xorg-xinput xorg-xbacklight udiskie light networkmanager network-manager-applet xorg-xset perl-anyevent-i3 termite rlwrap aspell zsh screenfetch-git pandoc qutebrowser
# * apps
# neovim ranger skypeforlinux-bin gpmdp zathura zathura-pdf-poppler texlive-most pianobar mpv transmission-cli spotify htop-vim-solarized-git translate-shell mpsyt artha xorg-xprop gcolor2 jq-git scrot cava clyrics
# * ~/.config/scripts must be in $PATH

set $i3dir ~/.config/i3/
set $term termite
set $leader Mod4
# default tab layout
workspace_layout default
# font
font pango:DejaVu Sans Mono 8
# no mouse scroll action
bindsym button4 nop
bindsym button5 nop
# use Mouse+$leader to drag floating windows to their wanted position
floating_modifier $leader
# system mode
set $mode_system Process manager, (c)reload, (C)restart, Lock, Exit, Shutdown, Reboot, (e)logout, (S)suspend, Hibernate
mode "$mode_system" {
    bindsym p exec --no-startup-id $term -e htop, mode "default"
    bindsym c reload
    bindsym Shift+c restart
    bindsym l exec --no-startup-id i3lock-fancy, mode "default"
    bindsym e [class=".*"] kill, exit, mode "default"
    bindsym Shift+s exec --no-startup-id i3lock-fancy && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id i3lock-fancy && systemctl hibernate, mode "default"
    bindsym r [class=".*"] kill, exec systemctl reboot, mode "default"
    bindsym s [class=".*"] kill, exec systemctl poweroff, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $leader+p mode "$mode_system"
# terminal, explorer and editor shortcuts
bindsym $leader+Return exec $term
bindsym $leader+Shift+Return exec $term -d "$(xcwd)"
bindsym $leader+e exec $term -e "${EDITOR:=$VISUAL}"
bindsym $leader+Shift+e exec $term -d "$(xcwd)" -e "${EDITOR:=$VISUAL} ."
bindsym $leader+x exec $term -e ranger
bindsym $leader+Shift+x exec $term -d "$(xcwd)" -e "ranger ."
# kill focused window
bindsym $leader+q kill
bindsym $leader+Shift+q [class=".*"] kill
# program launcher
bindsym $leader+d exec rofi -show run
# change focus
bindsym $leader+h focus left
bindsym $leader+j focus down
bindsym $leader+k focus up
bindsym $leader+l focus right
# alternatively, you can use the cursor keys:
bindsym $leader+Left focus left
bindsym $leader+Down focus down
bindsym $leader+Up focus up
bindsym $leader+Right focus right
# move focused window
bindsym $leader+Shift+h move left
bindsym $leader+Shift+j move down
bindsym $leader+Shift+k move up
bindsym $leader+Shift+l move right
bindsym $leader+Shift+Left move left
bindsym $leader+Shift+Down move down
bindsym $leader+Shift+Up move up
bindsym $leader+Shift+Right move right
# split method
bindsym $leader+period split h
bindsym $leader+comma split v
# enter fullscreen for the focused container
bindsym $leader+f fullscreen toggle
# toggle touchpad
bindsym $leader+t exec --no-startup-id $i3dir/touchpad_toggle, mode "default"
# change container layout
bindsym $leader+b layout stacking
bindsym $leader+n layout tabbed
bindsym $leader+m layout toggle split
# toggle tiling / floating
bindsym $leader+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $leader+space focus mode_toggle
# not sure if I need these
# bindsym $leader+t focus parent
# bindsym $leader+g focus child
# workspace declarations
set $todos_workspace 100:
set $translator_workspace 101:
set $browser_workspace 102:
set $chat_workspace 103:
set $music_workspace 104:♫
set $video_workspace 105:
set $stuff_workspace 106:
# numerical
set $first_workspace 201:1
set $second_workspace 202:2
set $third_workspace 203:3
set $fourth_workspace 204:4
set $fifth_workspace 205:5
set $sixth_workspace 206:6
set $seventh_workspace 207:7
set $eighth_workspace 208:8
set $ninth_workspace 209:9
set $tenth_workspace 210:10
# switch to workspace
bindsym $leader+a exec --no-startup-id $i3dir/todos_init $todos_workspace todos $term
bindsym $leader+w exec --no-startup-id $i3dir/init_layout $browser_workspace browser chromium
bindsym $leader+c exec --no-startup-id $i3dir/init_layout $chat_workspace chats telegram-desktop
bindsym $leader+r exec --no-startup-id $i3dir/music_init $music_workspace music $term
bindsym $leader+z exec --no-startup-id $i3dir/translators_init $translator_workspace translators $term
bindsym $leader+v workspace $video_workspace, layout tabbed
bindsym $leader+s workspace $stuff_workspace, layout tabbed
bindsym $leader+Shift+d exec --no-startup-id $term -e "repl trans -no-ansi"
# numeric
bindsym $leader+1 workspace $first_workspace
bindsym $leader+2 workspace $second_workspace
bindsym $leader+3 workspace $third_workspace
bindsym $leader+4 workspace $fourth_workspace
bindsym $leader+5 workspace $fifth_workspace
bindsym $leader+6 workspace $sixth_workspace
bindsym $leader+7 workspace $seventh_workspace
bindsym $leader+8 workspace $eighth_workspace
bindsym $leader+9 workspace $ninth_workspace
bindsym $leader+0 workspace $tenth_workspace
# move focused container to workspace
bindsym $leader+Shift+a move container to workspace $todos_workspace
bindsym $leader+Shift+w move container to workspace $browser_workspace
bindsym $leader+Shift+c move container to workspace $chat_workspace
bindsym $leader+Shift+r move container to workspace $music_workspace
bindsym $leader+Shift+z move container to workspace $translator_workspace
bindsym $leader+Shift+s move container to workspace $stuff_workspace
bindsym $leader+Shift+v move container to workspace $video_workspace
# numeric
bindsym $leader+Shift+1 move container to workspace $first_workspace
bindsym $leader+Shift+2 move container to workspace $second_workspace
bindsym $leader+Shift+3 move container to workspace $third_workspace
bindsym $leader+Shift+4 move container to workspace $fourth_workspace
bindsym $leader+Shift+5 move container to workspace $fifth_workspace
bindsym $leader+Shift+6 move container to workspace $sixth_workspace
bindsym $leader+Shift+7 move container to workspace $seventh_workspac
bindsym $leader+Shift+8 move container to workspace $eighth_workspace
bindsym $leader+Shift+9 move container to workspace $ninth_workspace
bindsym $leader+Shift+0 move container to workspace $tenth_workspace
# cycle workspaces
# bindsym Mod1+Tab workspace next
bindsym Mod1+Shift+Tab workspace prev
# workspace back and forth
bindsym $leader+Tab workspace back_and_forth
bindsym $leader+Shift+Tab move container to workspace back_and_forth
# workspace app assignments
assign [class="discord"] $chat_workspace
assign [class="Telegram"] $chat_workspace
assign [class="Skype"] $chat_workspace
# resize
bindsym $leader+y resize shrink width 10 px or 10 ppt
bindsym $leader+u resize grow height 10 px or 10 ppt
bindsym $leader+i resize shrink height 10 px or 10 ppt
bindsym $leader+o resize grow width 10 px or 10 ppt
# keyboard layout (input languages)
exec --no-startup-id xmodmap ~/.config/keymap
exec --no-startup-id setxkbmap -option grp:switch,grp:caps_toggle,grp_led:caps us,ru
bindsym $leader+Control+1 exec --no-startup-id "setxkbmap us,ru"
bindsym $leader+Control+2 exec --no-startup-id "setxkbmap us,ua"
# screenshots
bindsym Print exec --no-startup-id scrot ~/images/screenshots/%Y-%m-%d-%T-screenshot.png
# laptp fn key bindings
# pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle
# sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10
# borders
hide_edge_borders smart
new_window pixel 1
# gaps
smart_gaps on
exec_always i3-msg gaps inner all set 2
# colors
# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 #ffffff #ffffff   #d97d19
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

# startup commands
exec_always --no-startup-id xrdb ~/.config/.Xresources && ~/.config/polybar/launch
# no beep
exec_always --no-startup-id xset -b
exec --no-startup-id nm-applet
# exec_always --no-startup-id xmodmap ~/.config/keymap
exec --no-startup-id $i3dir/touchpad_disable
exec --no-startup-id feh --bg-scale ~/.config/wall.png
exec --no-startup-id unclutter --timeout 1
exec --no-startup-id compton
exec --no-startup-id udiskie
exec --no-startup-id transmission-daemon

exec --no-startup-id dropboxd
exec --no-startup-id ~/apps/org_backup/org-watch-log

exec i3-msg workspace $first_workspace
