# move focused container to workspace
bindsym $mod+Shift+t move container to workspace $todos_workspace
bindsym $mod+Shift+b move container to workspace $browser_workspace
bindsym $mod+Shift+m move container to workspace $messenger_workspace
bindsym $mod+Shift+u move container to workspace $utility_workspace

